{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "release": {
            "type": "object",
            "properties": {
                "name": {"type": "array"},
                "barcode": {"type": "array"},
                "status": {"type": "array"},
                "packaging": {"type": "array"},
                "language": {"type": "array"},
                "script": {"type": "array"},

                "release_group": {"type": "array"},

                "artists": {"type": "array"},
                "artist_credit": {"type": "array"},

                "labels": {
                    "type": "object",
                    "properties": {
                        "combined": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "label": {"type": "string"},
                                    "catalog_number": {"type": "string"}
                                }
                            }
                        },
                        "split": {
                            "type": "object",
                            "properties": {
                                "labels": {"type": "array"},
                                "catalog_numbers": {"type": "array"}
                            } 
                        }
                    }
                },

                "events": {
                    "type": "object"
                    "properties": {
                        "combined": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "country": {"type": "string"},
                                    "date": {"type": "string"}
                                }
                            }
                        },
                        "split": {
                            "type": "object",
                            "properties": {
                                "countries": {"type": "array"},
                                "dates": {"type": "array"}
                            }
                        }
                    }
                },

                "mediums": {
                    "type": "object"
                    "properties": {
                        "combined": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "tracks": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "name": {"type": "array"},
                                                "artists": {"type": "array"},
                                                "artist_credit": {"type": "array"},
                                                "number": {"type": "array"},
                                                "length": {"type": "array"},
                                            }
                                        }
                                    },
                                    "format": {"type": "string"}
                                }
                            }
                        },
                        "split": {
                            "type": "object",
                            "properties": {
                                "tracks": {"type": "array"},
                                "formats": {"type": "array"}
                            }
                        }
                    }
                }
            }
        }
    }
}
